        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Member": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer",
            "example": 42
          },
          "user_username": {
            "type": "string",
            "example": "john_doe"
          },
          "mem_firstname": {
            "type": "string",
            "example": "John"
          },
          "mem_name": {
            "type": "string",
            "example": "Doe"
          },
          "mem_sex": {
            "type": "string",
            "enum": ["M", "F"],
            "example": "M"
          },
          "mem_size": {
            "type": "integer",
            "example": 180
          },
          "mem_weight": {
            "type": "number",
            "format": "float",
            "example": 75.5
          },
          "mem_birth_year": {
            "type": "integer",
            "example": 1990
          },
          "mem_mail": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "mem_phone": {
            "type": "string",
            "example": "+33612345678"
          }
        }
      },
      "Raid": {
        "type": "object",
