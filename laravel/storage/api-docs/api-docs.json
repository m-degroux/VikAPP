          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Account deleted"
          }
        }
      }
    },
    "/raids": {
      "get": {
        "tags": ["Raids"],
        "summary": "List all raids",
        "description": "Get paginated list of raids with filtering",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer",
              "maximum": 100,
              "default": 15
            }
          },
          {
            "name": "upcoming",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
