    "contact": {
      "email": "contact@vikapp.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Local Development Server"
    },
    {
      "url": "https://api.vikapp.com",
      "description": "Production Server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication and account management"
